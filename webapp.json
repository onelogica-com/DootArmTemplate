{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "defaultValue": "[resourceGroup().location]",
            "type": "String",
            "metadata": {
                "description": "Location for the Web App"
            }
        },
        "appServicePlanName": {
            "type": "String",
            "metadata": {
                "description": "Name of the App Service Plan"
            }
        },
        "webAppName": {
            "type": "String",
            "metadata": {
                "description": "Name of the Web App"
            }
        },
        "repositoryUrl": {
            "type": "String",
            "metadata": {
                "description": "The GitHub repository URL"
            }
        },
        "githubToken": {
            "type": "SecureString",
            "metadata": {
                "description": "GitHub Personal Access Token"
            }
        },
        "branch": {
            "defaultValue": "main",
            "type": "String",
            "metadata": {
                "description": "The branch in the repository to deploy from"
            }
        },
        "appSettings": {
            "defaultValue": {},
            "type": "Object",
            "metadata": {
                "description": "Application settings for the Web App"
            }
        },
        "serverwebAppName": {
            "type": "String",
            "metadata": {
                "description": "Name of the frontend server Web App"
            }
        },
        "serverrepositoryUrl": {
            "type": "String",
            "metadata": {
                "description": "The GitHub repository URL of frontend server"
            }
        },
        "servergithubToken": {
            "type": "SecureString",
            "metadata": {
                "description": "GitHub Personal Access Token"
            }
        },
        "serverbranch": {
            "defaultValue": "main",
            "type": "String",
            "metadata": {
                "description": "The branch in the repository to deploy from"
            }
        },
        "serverappSettings": {
            "defaultValue": {},
            "type": "Object",
            "metadata": {
                "description": "Application settings for the Web App"
            }
        },
        "backendwebAppName": {
            "type": "String",
            "metadata": {
                "description": "Name of the backend Web App"
            }
        },
        "backendrepositoryUrl": {
            "type": "String",
            "metadata": {
                "description": "The GitHub backend repository URL"
            }
        },
        "backendgithubToken": {
            "type": "SecureString",
            "metadata": {
                "description": "GitHub Personal Access Token"
            }
        },
        "backendbranch": {
            "defaultValue": "main",
            "type": "String",
            "metadata": {
                "description": "The branch in the repository to deploy from"
            }
        },
        "backendappSettings": {
            "defaultValue": {},
            "type": "Object",
            "metadata": {
                "description": "Application settings for the Web App"
            }
        },
        "aadAppName": {
            "type": "String",
            "metadata": {
                "description": "Name for the Azure AD App registration"
            }
        }
    },
    "resources": [
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2023-12-01",
            "name": "[parameters('appServicePlanName')]",
            "location": "[parameters('location')]",
            "sku": {
                "tier": "Standard",
                "name": "S1",
                "capacity": 1
            },
            "properties": {
                "reserved": true
            }
        },
        // Frontend Web App
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2023-12-01",
            "name": "[parameters('webAppName')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]"
            ],
            "kind": "app,linux",
            "properties": {
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]",
                "siteConfig": {
                    "appSettings": "[parameters('appSettings')]",
                    "linuxFxVersion": "NODE|20-lts",
                    "startupCommand": "npx serve -s dist -l 3000"
                }
            }
        },
        // Frontend GitHub Deployment
        {
            "type": "Microsoft.Web/sites/sourcecontrols",
            "apiVersion": "2023-12-01",
            "name": "[concat(parameters('webAppName'), '/web')]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', parameters('webAppName'))]"
            ],
            "properties": {
                "repoUrl": "[parameters('repositoryUrl')]",
                "branch": "[parameters('branch')]",
                "isGitHubAction": true,
                "githubActionConfiguration": {
                    "githubPersonalAccessToken": "[parameters('githubToken')]"
                }
            }
        },
         // ServerWeb App
         {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2023-12-01",
            "name": "[parameters('serverwebAppName)]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]"
            ],
            "kind": "app,linux",
            "properties": {
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]",
                "siteConfig": {
                    "appSettings": "[parameters('erverappSetting')]",
                    "linuxFxVersion": "NODE|20-lts",
                    "startupCommand": " npm run dev"
                }
            }
        },
        // ServerGitHub Deployment
        {
            "type": "Microsoft.Web/sites/sourcecontrols",
            "apiVersion": "2023-12-01",
            "name": "[concat(parameters('webAppName'), '/web')]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', parameters('webAppName'))]"
            ],
            "properties": {
                "repoUrl": "[parameters('serverrepositoryUrl')]",
                "branch": "[parameters('serverbranch')]",
                "isGitHubAction": true,
                "githubActionConfiguration": {
                    "githubPersonalAccessToken": "[parameters('servergithubToken')]"
                }
            }
        },
        // Backend Web App
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2023-12-01",
            "name": "[parameters('backendwebAppName')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]"
            ],
            "kind": "app,linux",
            "properties": {
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]",
                "siteConfig": {
                    "appSettings": "[parameters('backendappSettings')]",
                    "linuxFxVersion": "PYTHON|3.9",
                    "startupCommand": "gunicorn --bind 0.0.0.0 --worker-class aiohttp.worker.GunicornWebWorker --timeout 600 app:APP"
                    
                }
            }
        },
        // Backend GitHub Deployment
        {
            "type": "Microsoft.Web/sites/sourcecontrols",
            "apiVersion": "2023-12-01",
            "name": "[concat(parameters('backendwebAppName'), '/web')]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', parameters('backendwebAppName'))]"
            ],
            "properties": {
                "repoUrl": "[parameters('backendrepositoryUrl')]",
                "branch": "[parameters('backendbranch')]",
                "isGitHubAction": true,
                "githubActionConfiguration": {
                    "githubPersonalAccessToken": "[parameters('backendgithubToken')]"
                }
            }
        },
        // AAD Deployment Script
        {
            "type": "Microsoft.Resources/deploymentScripts",
            "apiVersion": "2020-10-01",
            "name": "aadAppRegistrationScript",
            "location": "[parameters('location')]",
            "kind": "AzurePowerShell",
            "properties": {
                "azPowerShellVersion": "3.0",
                "scriptContent": "$APP_NAME = \"[parameters('aadAppName')]\"\n$SECRET_NAME = \"Client Secret\"\n$APP_ID = az ad app create --display-name $APP_NAME --query appId --output tsv\nWrite-Host \"App Registration created with App ID: $APP_ID\"\n$SECRET_VALUE = az ad app credential reset --id $APP_ID --append --query password --output tsv\nWrite-Host \"Client secret created with value: $SECRET_VALUE\"\naz ad app permission add --id $APP_ID --api 00000003-0000-0000-c000-000000000000 --api-permissions User.Read\naz ad app permission grant --id $APP_ID --api 00000003-0000-0000-c000-000000000000\naz ad app update --id $APP_ID --add web.redirectUris \"https://token.botframework.com\" \"https://token.botframework.com/.auth/web/redirect\"\nWrite-Host \"Redirect URIs added: https://token.botframework.com and https://token.botframework.com/.auth/web/redirect\"\nWrite-Host \"App Registration Name: $APP_NAME\"\nWrite-Host \"App ID: $APP_ID\"\nWrite-Host \"Client Secret: $SECRET_VALUE\"",
                "arguments": "",
                "retentionInterval": "P1D",
                "timeout": "PT30M",
                "cleanupPreference": "Always",
                "forceUpdateTag": "[utcNow()]"
            }
        }
        
    ]
}
